#define ZMK_MOUSE_SCRL_VAL 140

#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>
#include <dt-bindings/zmk/pointing.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
    };
  
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <14>;
// | SW1 | SW4 | SW7 | SW10 | SW13 | SW16 |                 | SW22 | SW25 | SW28 | SW31 | SW34 | SW37 |
// | SW2 | SW5 | SW8 | SW11 | SW14 | SW17 |                 | SW23 | SW26 | SW29 | SW32 | SW35 | SW38 |
// | SW3 | SW6 | SW9 | SW12 | SW15 | SW18 |                 | SW24 | SW27 | SW30 | SW33 | SW36 | SW39 |
//                   | SW19 | SW20 | SW21 |                 | SW41 | SW42 | SW43 |
        map = <
          RC(0,1) RC(1,0) RC(2,0) RC(3,0) RC(4,0) RC(5,0)    RC(12,0) RC(11,0) RC(10,0) RC( 9,0) RC( 8,0) RC(7,1)
          RC(0,2) RC(1,2) RC(2,1) RC(3,1) RC(4,1) RC(5,1)    RC(12,1) RC(11,1) RC(10,1) RC( 9,1) RC( 8,2) RC(7,2)
          RC(0,3) RC(1,3) RC(2,3) RC(3,2) RC(4,2) RC(5,2)    RC(12,2) RC(11,2) RC(10,2) RC( 9,3) RC( 8,3) RC(7,3)
                                  RC(6,0) RC(6,1) RC(6,2)    RC(13,2) RC(13,1) RC(13,0)
        >;
    };

    kscan0: kscan_charlyplex {
      compatible = "zmk,kscan-gpio-charlieplex";
      wakeup-source;

      interrupt-gpios = <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
      
      gpios = <&xiao_d 4  (GPIO_ACTIVE_HIGH)>  // 0
            , <&xiao_d 5 (GPIO_ACTIVE_HIGH)>  // 1
            , <&xiao_d 6  (GPIO_ACTIVE_HIGH)>  // 2
            , <&xiao_d 7  (GPIO_ACTIVE_HIGH)>  // 3
            , <&xiao_d 8   (GPIO_ACTIVE_HIGH)>  // 4
            , <&xiao_d 9  (GPIO_ACTIVE_HIGH)>  // 5
            , <&xiao_d 10  (GPIO_ACTIVE_HIGH)>  // 6
            ;
    };

    // Encoder definitions
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <72>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <20>;
    };

    // auto mouse layer
    /omit-if-no-ref/ zip_temp_layer: zip_temp_layer {
        compatible = "zmk,input-processor-temp-layer";
        #input-processor-cells = <2>;
        excluded-positions = <
            16 // F
            15 // D
            13 // A
            12 // LCtrl
            24 // LShift
            35 // scroll toggle
            36 // Alt/Cmd
        >;
        // do not enable tepm layer unless 200ms after key input
        require-prior-idle-ms = <200>;
    };
};

&physical_layout0 {
    kscan = <&kscan0>;
    transform = <&default_transform>;

    keys    //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 50  50   0    0       0     0     0>
            , <&key_physical_attrs 50  50  50    0       0     0     0>
            , <&key_physical_attrs 50  50 100    0       0     0     0>
            , <&key_physical_attrs 50  50 150    0       0     0     0>
            , <&key_physical_attrs 50  50 200    0       0     0     0>
            , <&key_physical_attrs 50  50 250    0       0     0     0>
            , <&key_physical_attrs 50  50 350    0       0     0     0>
            , <&key_physical_attrs 50  50 400    0       0     0     0>
            , <&key_physical_attrs 50  50 450    0       0     0     0>
            , <&key_physical_attrs 50  50 500    0       0     0     0>
            , <&key_physical_attrs 50  50 550    0       0     0     0>
            , <&key_physical_attrs 50  50 600    0       0     0     0>
            // row 2
            , <&key_physical_attrs 50  50   0   50       0     0     0>
            , <&key_physical_attrs 50  50  50   50       0     0     0>
            , <&key_physical_attrs 50  50 100   50       0     0     0>
            , <&key_physical_attrs 50  50 150   50       0     0     0>
            , <&key_physical_attrs 50  50 200   50       0     0     0>
            , <&key_physical_attrs 50  50 250   50       0     0     0>
            , <&key_physical_attrs 50  50 350   50       0     0     0>
            , <&key_physical_attrs 50  50 400   50       0     0     0>
            , <&key_physical_attrs 50  50 450   50       0     0     0>
            , <&key_physical_attrs 50  50 500   50       0     0     0>
            , <&key_physical_attrs 50  50 550   50       0     0     0>
            , <&key_physical_attrs 50  50 600   50       0     0     0>
            // row 3
            , <&key_physical_attrs 50  50   0  100       0     0     0>
            , <&key_physical_attrs 50  50  50  100       0     0     0>
            , <&key_physical_attrs 50  50 100  100       0     0     0>
            , <&key_physical_attrs 50  50 150  100       0     0     0>
            , <&key_physical_attrs 50  50 200  100       0     0     0>
            , <&key_physical_attrs 50  50 250  100       0     0     0>
            , <&key_physical_attrs 50  50 350  100       0     0     0>
            , <&key_physical_attrs 50  50 400  100       0     0     0>
            , <&key_physical_attrs 50  50 450  100       0     0     0>
            , <&key_physical_attrs 50  50 500  100       0     0     0>
            , <&key_physical_attrs 50  50 550  100       0     0     0>
            , <&key_physical_attrs 50  50 600  100       0     0     0>
            // row 4
            , <&key_physical_attrs 50  50 150  150       0     0     0>
            , <&key_physical_attrs 50  50 200  150       0     0     0>
            , <&key_physical_attrs 50  50 250  150       0     0     0>
            , <&key_physical_attrs 50  50 350  150       0     0     0>
            , <&key_physical_attrs 50  50 400  150       0     0     0>
            , <&key_physical_attrs 50  50 450  150       0     0     0>
            ;
};

// enable extra gpios
&uicr {
    nfct-pins-as-gpios;
};
